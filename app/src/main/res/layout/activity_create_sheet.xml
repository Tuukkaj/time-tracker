<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter name of the sheet"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"/>
    <EditText android:id="@+id/createsheet_sheet-name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sheet name"
        android:layout_marginHorizontal="10dp"
        android:inputType="textPersonName"/>

    <View android:id="@+id/list_time_separator"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/list_time_date"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimaryDark"/>

    <android.support.design.widget.FloatingActionButton
        android:onClick="createClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorAccent"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal"
        android:text="Create"
        />

    <android.support.design.widget.FloatingActionButton
        android:onClick="cancelClicked"
        android:id="@+id/create_sheet_btn_cancel"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal"
        android:text="Cancel"
        />

</LinearLayout>