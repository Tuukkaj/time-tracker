<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="5dp"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/colorPrimaryDark">

    <RelativeLayout android:id="@+id/list_time_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3pt">

        <TextView
            android:id="@+id/list_time_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="08.04.2019"
            android:textSize="20dp"/>

        <TextView android:id="@+id/list_time_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View android:id="@+id/list_time_separator"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/list_time_date"
            android:background="@color/white"/>

        <TextView android:id="@+id/list_time_comment"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_time_data_comment"
            android:layout_below="@+id/list_time_separator"
            android:textColor="@color/white"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>