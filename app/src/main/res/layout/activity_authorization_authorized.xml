<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="5pt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/authorization_btn_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="buttonClick"
            android:src="@drawable/ic_timer_white_24dp"
            app:backgroundTint="@color/colorPrimaryDark"/>
        <TextView
            android:layout_marginLeft="5pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20pt"
            android:text="Timer"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/authorization_btn_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="buttonClick"
            android:src="@drawable/ic_add_circle_outline_white_24dp"
            app1:backgroundTint="@color/colorPrimaryDark"/>
        <TextView
            android:layout_marginLeft="5pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20pt"
            android:text="Add time"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/authorization_btn_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="buttonClick"
            android:src="@drawable/ic_list_black_24dp"
            app2:backgroundTint="@color/colorPrimaryDark"/>
        <TextView
            android:layout_marginLeft="5pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20pt"
            android:text="Show time"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/authorization_btn_continue"
            android:backgroundTint="@color/colorPrimary"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="buttonClick"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"/>
        <TextView android:id="@+id/authorization_txt_active"
            android:visibility="invisible"
            android:layout_marginLeft="5pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20pt"
            android:text="Active timer"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/accountIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_perm_identity_black_24dp"
            android:visibility="invisible" />

        <TextView android:id="@+id/accountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"/>
    </LinearLayout>
</LinearLayout>