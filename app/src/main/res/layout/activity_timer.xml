<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_margin="30pt"
            >
            <TextView android:id="@+id/timer-time-title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME"
                android:textSize="15pt"/>
            <TextView android:id="@+id/timer-time-text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.5pt" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_margin="30pt"
            >
            <TextView   android:id="@+id/start-title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15pt"
                android:text="START"/>
            <TextView android:id="@+id/start-text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.5pt"
                android:text=""/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt">
        <Button android:id="@+id/end-button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20pt"
            android:text="END"
            android:enabled="false"
            android:onClick="onClick"
            />
        <Button android:id="@+id/start-button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20pt"
            android:text="START"
            android:onClick="onClick"/>
    </RelativeLayout>

</LinearLayout>